<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.uploaddata.UploadDataActivity">

    <ProgressBar
        android:id="@+id/pb_upload_progress"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:progressBackgroundTint="#C8BEBE"
        android:progressBackgroundTintMode="screen"
        android:secondaryProgressTint="#C8C2C2"
        android:progress="90" />

    <TextView
        android:id="@+id/tv_upload_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploading a photo"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/pb_upload_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>