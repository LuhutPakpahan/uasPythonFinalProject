<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_darker</item>
        <item name="colorSecondaryVariant">@color/gradient_brighter</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TITLE TEXT STYLE -->
    <style name="Title" />

    <style name="Title.LoginRegister">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/profile_name_title</item>
    </style>

    <style name="Title.Form">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_50_transparency</item>
    </style>

    <style name="Title.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.FeedbackHeader">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.Profile_Name">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/profile_name_title</item>
    </style>

    <style name="Title.ItemNavigationDrawer">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.HomeSection">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.HomePrimaryButton">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black_87_transparency</item>
    </style>

    <style name="Title.ResultButton">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Title.FeedbackQuestion">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.FeedbackSuggestions">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_87_transparency</item>
    </style>

    <style name="Title.PossibilityAcne">
        <item name="android:fontFamily">@font/domine_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">25dp</item>
        <item name="android:textColor">@color/detail_screen_title</item>
    </style>

    <style name="Title.ArticleHeader">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.ItemResultTitle">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">10.8dp</item>
        <item name="color">@color/result_item_title</item>
    </style>

    <style name="Title.HighestPossibility">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/highest_possibilities_color</item>
    </style>

    <style name="Title.HighestPossibilityAcneTitle">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.OtherPossibilities">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.OtherAcneName">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.OtherAcneDescription">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- SUB TITLE TEXT STYLE -->
    <style name="Subtitle" />
    <style name="Subtitle.LoginRegister">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_50_transparency</item>
    </style>

    <style name="Subtitle.ArticleDescription">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/black_87_transparency</item>
    </style>


    <!-- CONTENT TEXT STYLE -->
    <style name="Content" />

    <style name="Content.Form">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_87_transparency</item>
    </style>

    <style name="Content.FeedbackSubHeader">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_87_transparency</item>
    </style>

    <style name="Content.TakeAPhotoSubHeader">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Content.Agreement">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Content.FeedbackRangeValue">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/black_87_transparency</item>
    </style>

    <style name="Content.DescriptionPossibilityAcne">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">18dp</item>
        <item name="android:textColor">@color/detail_screen_description</item>
    </style>
    
    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyApplication.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RatingBar">
        <item name="colorControlNormal">#AAA7AC</item>
        <item name="colorControlActivated">#41546A</item>
    </style>
</resources>